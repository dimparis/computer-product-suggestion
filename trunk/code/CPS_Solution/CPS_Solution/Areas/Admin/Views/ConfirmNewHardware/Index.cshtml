                                                                    @Html.DropDownList("DISPLAYList", ViewBag.displayList as List<SelectListItem>, new { @class = "chzn-select", id = @h.IdHardware,@style = "width: 250px;"  })
                                                                </div>
                                                            </div> 
                                                        }
