    <script type="text/javascript">
        function updateAuto() {
            var vals = [];
            $('input:checkbox[name=idListAuto]:checked').each(function () {
                vals.push($(this).val());
            });

            $.ajax({
                url: "/Admin/Recommend/setStatusAuto",
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({ idListAuto: vals }),
                success: function (msg) {
                    location.reload();
                }
            })
        }
        function removeRecommend() {
            var vals = [];
            $('input:checkbox[name=idList]:checked').each(function () {
                vals.push($(this).val());
            });

            $.ajax({
                url: "/Admin/Recommend/setStatus",
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({ idList: vals }),
                success: function (msg) {
                    location.reload();
                }
            })
        }
    </script>
}
