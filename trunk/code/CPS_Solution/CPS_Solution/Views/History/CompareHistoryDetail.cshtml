@model IEnumerable<CPS_Solution.EntityFramework.HistoryDetail>
@{
    ViewBag.Title = "Chi tiết lịch sử so sánh";
    Layout = "~/Views/Shared/_UserPage.cshtml";
}

<link href="@Url.Content("~/Content/Order.css")" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="@Url.Content("~/Template/Metro/css/metro-bootstrap.css")" />
    <link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />


<div class="bgSizeCover">
    <div id="Contain" class="bgContainCover">
        
        <div class="main-content" style="padding: 60px 20px 20px 20px;">
            

            <div>
                <table class="table table-bordered table-hover" style="background-color:white">
                    <thead>
                        <tr class="bg-header">
                            <th style="width: 40%;text-align:center">Tên sản phẩm</th>
                            @*<th style="width: 30%;text-align:center">Wi</th>*@
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
            
                            <tr>
                                <td>
                                    <a href="/Product/Details?ID=@item.ProductID" target="_blank">
                                        @Html.DisplayFor(modelItem => item.Product.Name)
                                    </a>
                                </td>
                                @*<td style="text-align:center">
                                    @if (item.isWinner.Equals(true))
                                    {
                                        <span>True</span>
                                    }
                                    else 
                                    { 
                                        <span>False</span>
                                    }
                                </td>*@
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="metro">
                <input class="primary" value="Quay lại" type="button" onclick='window.location = "/History/CompareHistory"' />
                    </div>
                @*@Html.ActionLink("Quay lại", "BuyingHistory", "History", null, new { @class = "button" })*@
            </div>
        </div>
    </div>
</div>
