            position: fixed;
            width: 150px;
            height: 27px;
            outline: none;
            bottom: 0px;
            left: 0px;
        }

        /*Initialize*/
        ul#menu, ul#menu ul.sub-menu {
            padding: 0;
            margin: 0;
        }

        ul#menu li, ul#menu ul.sub-menu li {
            list-style-type: none;
            display: inline-block;
        }

        /*Link Appearance*/
        ul#menu li a, ul#menu li ul.sub-menu li a {
            text-decoration: none;
            color: #fff;
            background: #666;
            padding: 5px;
            display: inline-block;
        }

        /*Make the parent of sub-menu relative*/
        ul#menu li {
            position: relative;
        }

        /*sub menu*/
        ul#menu li ul.sub-menu {
            display: none;
            position: absolute;
            top: 30px;
            left: 0;
            width: 100px;
        }

        ul#menu li:hover ul.sub-menu {
            display: block;
        }
    </style>
