<div class="grid_4">
    <div class="da-panel-content">
        @if (TempData["create"] != null)
        {
            <div class="da-message success">
                Sản phẩm đã được tạo mới thành công.
            </div>
        }
        @if (TempData["updateStatus"] != null)
        {
            string statusMessage = TempData["updateStatus"].ToString();
            if (statusMessage == "Success")
            {
            <div class="da-message success">
                Trạng thái được cập nhật thành công.
            </div>
            }
            else if (statusMessage == "Failed")
            {
            <div class="da-message error">
                Cập nhật trang thái thất bại. Xin vui lòng thử lại.
            </div>
            }
        }
        @if (TempData["edit"] != null)
        {
            string statusMessage = TempData["edit"].ToString();
            if (statusMessage == "success")
            {
            <div class="da-message success">
                Sản phẩm đã được cập nhật thành công.
            </div>
            }
            else if (statusMessage == "failed")
            {
            <div class="da-message error">
                Cập nhật sản phẩm thất bại. Xin vui lòng thử lại.
            </div>
            }
        }
    </div>
</div>
<div class="grid_4">
    <div class="da-panel collapsible">
        <div class="da-panel-header">
            <span class="da-panel-title">
                <img src="@Url.Content("~/Areas/Admin/Dandelion/images/icons/black/16/list.png")" alt="" />
                Danh sách các Sản Phẩm
            </span>
            @using (Html.BeginForm("UpdatePrice", "Product"))
            {
                if (CPS_Solution.CommonClass.ConstantManager.IsUpdateRunning)
                {
                <input type="submit" value="Giá đang được cập nhật" disabled="disabled" class="da-button red" style="position: absolute; right: 75px; top: 15px; width: 120px" />
                }
                else
                {
                <input type="submit" value="Cập nhật giá" class="da-button blue" style="position: absolute; right: 75px; top: 15px; width: 120px" />
                           
                }
            }
        </div>
        <div class="da-panel-content">
            <table id="da-ex-datatable-numberpaging" class="da-table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên Sản Phẩm</th>
                        <th>Giá Sản Phẩm</th>
                        <th>Tổng Điểm</th>
                        <th>Thao Tác</th>
                        <th>Trạng Thái</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                        bool status = false;
                        foreach (var item in Model)
                        {

                            if (item.IsActive.HasValue)
                            {
                                if (item.IsActive.Value == true)
                                {
                                    status = item.IsActive.Value;
                                }
                            }
                            
                        <tr>
                            <td>@counter</td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.TotalWeightPoint</td>
                            <td>@Html.ActionLink("Chỉnh sửa", "EditProduct", new { id = item.ID })</td>
                            @if (status)
                            {
                                <td>
                                    <input type="submit" value="Hoạt động" class="da-button green" style="width:120px" data-id="@item.ID"/>
                                </td>  
                            }
                            else
                            {
                                <td>
                                    <input type="submit" value="Không hoạt động" class="da-button red"  data-id="@item.ID"/>
                                </td>  
                            }
                        </tr>
                            counter++;
                        } 
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
