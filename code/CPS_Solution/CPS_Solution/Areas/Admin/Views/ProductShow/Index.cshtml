<div class="grid_4">
    <div class="da-panel collapsible">
        <div class="da-panel-header">
            <span class="da-panel-title">
                <img src="@Url.Content("~/Areas/Admin/Dandelion/images/icons/white/16/list.png")" alt="" />
                Danh sách các sản phẩm  
            </span>

        </div>
        <div class="da-panel-content">
            <table id="da-ex-datatable-numberpaging" class="da-table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên Phụ</th>
                        <th>Cửa Hàng</th>
                        <th>Trạng Thái</th>
                        <th>Tên chính</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                        foreach (AliasProduct item in listAlias)
                        {
                         //  bool status = item.IsActive.Value;
                        <tr>
                            <td>@counter</td>
                            <td>@item.Name</td>
                            <td>@item.Store.StoreName</td>
                          
                            @if (item.IsActive == true)
                            {
                                <td >
                                    <input id ="IdActive@(item.ID)" type="submit"  value="Hoạt động" class="da-button green" onclick="ActiveAlias(@item.ID)" style="width:120px" data-id="@item.ID"/>
                                </td>  
                            }
                            else
                            {
                                <td >
                                    <input type="submit" id ="IdActive@(item.ID)"  value="Không hoạt động" class="da-button red" onclick="ActiveAlias(@item.ID)" style="width:120px"  data-id="@item.ID"/>
                                </td>  
                            }

                              @if (item.IsMain == true)
                            {
                                <td >
                                   <input class="rdio" type="radio" name="mainName" onclick="mainName(@item.ID)" checked value="">
                                </td>  
                            }
                            else
                            {
                                <td >
                                     <input class="rdio" type="radio" name="mainName" onclick="mainName(@item.ID)" value="">
                                </td>  
                            }
                        </tr>
                            counter++;
                        } 
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>

    ///  Active or deactive user
    function ActiveAlias(id) {
        var postData = {id: id};
        $.ajax({
            type: "POST",
            url: "/Admin/ProductShow/ActiveAlias",
            data: postData,
            success: function (data) {  
                if(data =="ok")
                {
                    document.getElementById("IdActive"+id).value="Hoạt động";
                    document.getElementById("IdActive"+id).className="da-button green";
                   
                }else{
                    document.getElementById("IdActive"+id).value="Không hoạt động";
                    document.getElementById("IdActive"+id).className="da-button red";
                }
            },

        });

    }  

    $(document).ready(function(){
        $("input[type='radio'][name='mainName']").click(function(e){
            if(!confirm('Bạn có chắc muốn thay đổi tên chính của sản phẩm?')){ e.preventDefault(); mainName(id);}
        });
    });

    function mainName(id)
    {
       
            var postData = {id: id};
            $.ajax({
                type: "POST",
                url: "/Admin/ProductShow/mainName",
                data: postData,
                success: function (data) {         
                    $('#successAlias').show();
                },

            });
        
    }
</script>