                                            {
                                            <td class=" ">
                                                <textarea id="idName_@p.stt" cols="14.5%" rows="2" style="border-color:red"> @p.Name</textarea></td>
                                                checkName++;
                                            }
                                        }
                                        @if (checkName < 1)
                                        {
                                            <td class=" ">
                                                <textarea id="idName_@p.stt"  cols="14.5%" rows="2"> @p.Name</textarea></td> 
                                        }
                                        @if (checkName > 0)
                                        {
                                            checkName--;
                                        }
                                        <!------------------------ Imagelink------------------------------>
                                        @for (int i = 0; i < loiImageLink.Length; i++)
