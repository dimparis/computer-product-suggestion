    <script type="text/javascript">
        $(function () {
            $(".da-button").click(function () {
                // Get the id from the link
                var recordToSet = $(this).attr("data-id");

                if (recordToSet != '') {

                    // Perform the ajax post
                    $.post("/Parser/SetActive", { "id": recordToSet },
                        function (data) {
                            location.reload();
                        });
                }
            });

        });
    </script>
    <script>
        function validateHhMm(inputField) {
            var isValid = /^([0-1]?[0-9]|2[0-4]):([0-5][0-9])?$/.test(inputField.value);


            if (isValid) {
                inputField.style.backgroundColor = '#bfa';
            } else {
                inputField.style.backgroundColor = '#fba';
                alert("Thời gian không đúng định dạng.Xin vui lòng thử lại. \n Hướng dẫn: \n -Cách 1: Định dạng đúng: [HH:mm] \n -Cách 2: Sử dụng công cụ để chọn thời gian.");

            }

            return isValid;
        }
    </script>
}

