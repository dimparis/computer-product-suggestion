<div class="grid_4">
    <div class="da-panel-content">

        @if (TempData["edit"] != null)
        {
            string statusMessage = TempData["edit"].ToString();
            if (statusMessage == "Success")
            {
            <div class="da-message info">
                <strong>Chỉnh sửa cấu hình hệ thống thành công.</strong>
            </div>
            }
            else if (statusMessage == "Failed")
            {
            <div class="da-message error">
                <strong>Chỉnh sửa cấu hình hệ thống thất bại. Xin vui lòng thử lại.</strong>
            </div>
            }
        }
    </div>
</div>
<div class="grid_4">
    <h1><strong>ConfigureSystem</strong></h1>
    <div class="da-panel collapsible">
        <div class="da-panel-header">
            <span class="da-panel-title">
                <img src="@Url.Content("~/Areas/Admin/Dandelion/images/icons/white/16/list.png")" alt="" />
                Cấu Hình Hệ Thống
            </span>
        </div>
        <div class="da-panel-content">
            @using (Html.BeginForm("UpdateConfigureSystem", "System", FormMethod.Post, new { @class = "da-form" }))
            {       
                <div class="da-form-row ">
                    <label>Số lần đề xuất của người dùng trong 1 ngày</label>
                    <div class="da-form-item large">
                        @Html.TextBoxFor(x => x.LimitRequestPerDay)
                    </div>
                </div>
                <div class="da-form-row ">
                    <label>Số điểm của sản phẩm tốt nhất</label>
                    <div class="da-form-item large">
                        @Html.TextBoxFor(x => x.TotalPoint)
                    </div>
                </div>
                <div class="da-form-row ">
                    <label>Thời gian chạy parser hằng ngày</label>
                    <div class="da-form-item">
                        @Html.TextBoxFor(x => x.ParseTime, new { id = "da-ex-timepicker",@onchange="validateHhMm(this);" })
                    </div>
                </div>
                <div class="da-button-row">
                    <input type="submit" value="Submit" class="da-button blue" />
                </div>
            }
        </div>
    </div>
</div>

