            //    }}]
        });
        $("#Edit-"+i+"-Popup-div").dialog("option", { modal: true }).dialog("open");
        event.preventDefault();
        var roleID = document.getElementById("RoleAcc"+i).value;
        document.getElementById("roleEdit"+i).value = roleID;   
    }

 
   

    // Tạo một cửa hàng
    function CreateNewStore() {
        var storeName = document.getElementById("idStoreName").value;
        var storeUrl = document.getElementById("idStoreUrl").value;    
        var count = 0;
        // kiểm tra tên
        if (storeName.length < 1 || storeName.length > 200) {
            document.getElementById("idStoreName").style.borderColor = 'red';
            count++;
        } else {
            document.getElementById("idStoreName").style.borderColor = "";
        }

        // kiểm tra url
        if (storeUrl.length < 1 || storeUrl.length > 200) {
            document.getElementById("idStoreUrl").style.borderColor = 'red';
            count++;
        } else {
            document.getElementById("idStoreUrl").style.borderColor = "";
        }
     
        if (count == 0) {
            $('#da-ex-validate4').submit();
        }
    }



    // Sửa thông tin tài khoản
    function EditStore(i) {
        var storeName = document.getElementById("idStoreNameUp"+i).value;
        var storeUrl = document.getElementById("idStoreUrlUp"+i).value;
     
        var count = 0;
        // kiểm tra tên
        if (storeName.length < 1 || storeName.length > 200) {
            document.getElementById("idStoreNameUp"+i).style.borderColor = 'red';
            count++;
        } else {
            document.getElementById("idStoreNameUp"+i).style.borderColor = "";
        }

        // kiểm tra url
        if (storeUrl.length < 1 || storeUrl.length > 200) {
            document.getElementById("idStoreUrlUp"+i).style.borderColor = 'red';
            count++;
        } else {
            document.getElementById("idStoreUrlUp"+i).style.borderColor = "";
        }   
        if (count == 0) {
            $('#da-ex-validate'+i).submit();
        }
    }

